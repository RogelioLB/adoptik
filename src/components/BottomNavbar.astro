---
// src/components/BottomNavbar.astro
const navItems = [
  { href: "/", label: "Home", icon: "M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" },
  { href: "/perfil", label: "Perfil", icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" },
  { href: "/peticiones", label: "Peticiones", icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" },
];

const { pathname } = Astro.url;
---

<nav class="h-16 min-h-16 bg-black shadow-md">
  <div class="container mx-auto h-full">
    <ul class="flex justify-around items-center h-full">
      {navItems.map(item => (
        <li class="h-full flex items-center">
          <a 
            href={item.href} 
            class:list={[
              "flex flex-col items-center justify-center text-xs font-medium h-full px-2 sm:px-4",
              pathname === item.href || (item.href !== "/" && pathname.startsWith(item.href)) 
                ? "text-purple-500" 
                : "text-gray-500 hover:text-purple-500 transition-colors duration-150"
            ]}
            aria-current={pathname === item.href ? "page" : undefined}
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mb-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
            </svg>
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>
